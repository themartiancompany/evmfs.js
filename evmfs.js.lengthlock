    _hash,
    _progress,
    _total) {
  let
    _msg,
    _template;
  _template =
    "Getting length for hash '{_hash}' " +
    "('{_progress}'of '{_total}').";
  _msg =
    _template.replaceAll(
      "{_hash}",
      _hash);
  _msg =
    _msg.replaceAll(
      "{_progress}",
      _progress);
  _msg =
    _msg.replaceAll(
