function 
  _cmdline_paths_parse(
    _paths,
    _disk_write) {
  let
    _path,
    _paths_length,
    _paths_total;
  if ( disk_write == "y" ) {
    _paths_total =
      _paths.length;
    _paths_length =
      _paths_total / 3;
    files_hashes =
      _paths.slice(
        0,
        _paths_length);
    files_locks_paths =
      _paths.slice(
        _paths_length,
        _paths_length * 2);
    files_lengths_paths =
      _paths.slice(
        _paths_length * 2,
        _paths_length * 3);
  }
  else if ( disk_write == "n" ) {
    files_hashes =
      _paths;
  }
}

function 
  _cmdline_parse() {
  let
    _paths
  quiet = 
    "y";
  _paths =
    [];
  process.argv.forEach(
    function (
      _value,
      _index,
      _array) {
      if ( _index == 2 ) {
        quiet =
          _value;
      }
      if ( _index == 3 ) {
        retries_max =
          _value;
      }
      if ( _index == 4 ) {
        api_key_path =
          _value;
      }
      if ( _index == 5 ) {
        target_network =
          _value;
      }
      if ( _index == 6 ) {
        contract_address =
          _value;
      }
      if ( _index == 7 ) {
        contract_abi_path =
          _value;
      }
      if ( _index == 8 ) {
        contract_bytecode_path =
          _value;
      }
      if ( _index == 9 ) {
        contract_compiler_output_path =
          _value;
      }
      if ( _index == 10 ) {
        publication_namespace =
          _value;
      }
      if ( _index == 11 ) {
        checkpoint_file_path =
          _value;
      }
      if ( _index == 12 ) {
        disk_write =
          _value;
      }
      if ( 12 < _index ) {
        _paths.push(
          _value);
      }
      if ( _value == "-h" ||
           _value == "--help" ) {
        _usage(
	  0);
      }
  });
  _cmdline_paths_parse(
    _paths,
    disk_write);
  if ( file_hash == "" ||
       publication_namespace == "" ) {
    _usage(
      1);
  }
}

if ( _cmdline_check(
       "lengthlock") ) {
  _global_variables();
  _cmdline_parse();
  _config_show();
  app_opts = [
    retries_max,
    api_key_path,
    target_network,
    contract_address,
    contract_abi_path,
    contract_bytecode_path,
    contract_compiler_output_path,
    method_object,
    publication_namespace,
    file_hash,
    index_start,
    index_end,
    checkpoint_file_path,
    chunks_files_paths,
  ];
  _length_lock.apply(
    null,
    app_opts);
}

