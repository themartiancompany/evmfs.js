function
  _usage(
    _exit_code) {
  let
    _line,
    _text;
  _text = [
    "Usage:",
    "  publish-bulk",
    "    <quiet>",
    "    <retries-max>",
    "    <call-timeout>",
    "    <wallet-seed-path>",
    "    <api-key-path>",
    "    <target-network>",
    "    <contract-address>",
    "    <contract-abi-path>",
    "    <contract-bytecode-path>",
    "    <contract-compiler-output-path>",
    "    <fs-address>",
    "    <publication-namespace>",
    "    <file-hash>",
    "    <index-start>",
    "    <index-end>",
    "    <buffer-length>",
    "    <checkpoint-file-path>",
    "    [chunk-file-path]",
    "",
    "Args:",
    "  <quiet>                          Can be 'y' or 'n'",
    "                                   Default: y",
    "  <retries-max>                    Maximum number of retries before",
    "                                   failing (not implemented).",
    "  <call-timeout>                   How many milliseconds to wait",
    "                                   for a return before declaring",
    "                                   the call failed.",
    "  <wallet-seed-path>               Path of the file containing",
    "                                   the seed phrase.",
    "  <api-key-path>                   Path of the API key for the",
    "                                   contract ABI provider service.",
    "  <target-network>                 Network on which the contract",
    "                                   resides.",
    "  <fs-address>                     File system contract address.",
    "  <contract-address>               Address of the contract.",
    "  <contract-abi-path>              Contract ABI path.",
    "  <contract-bytecode-path>         Path for the contract bytecode.",
    "  <contract-compiler-output-path>  Path for the contract compiler",
    "                                   output path (the hardhat artifact).",
    "  <publication-namespace>          Namespace in which the file will be",
    "                                   published.",
    "  <file-hash>                      Hash of the file to publish.",
    "  <index-start>                    Chunk index from where to start.",
    "  <index-end>                      Final chunk index to download.",
    "  <buffer-length>                  Chunks upload buffer length.",
    "  <checkpoint-file-path>           Checkpoint file on which latest",
    "                                   downloaded chunk index is saved",
    "                                   in case node was to crash.",
    "  <chunks-files-type>              Can be 'file' or 'list. If file",
    "                                   it will consider the next arguments",
    "                                   files, if 'list' it the next argument",
    "                                   will be considered a JSON list",
    "                                   containing the files paths.",
    "  [chunks-files-paths]             File chunks to publish.",
  ];
  for ( _line of _text ) {
    _msg_info(
      _line);
  }
  process.exit(
    _exit_code);
}

function 
  _cmdline_parse() {
  quiet = 
    "y";
  process.argv.forEach(
    function (
      _value,
      _index,
      _array) {
      if ( _index == 2 ) {
        quiet =
          _value;
      }
      if ( _index == 3 ) {
        retries_max =
          _value;
      }
      if ( _index == 4 ) {
        call_timeout =
          _value;
      }
      if ( _index == 5 ) {
        wallet_seed_path =
          _value;
      }
      if ( _index == 6 ) {
        api_key_path =
          _value;
      }
      if ( _index == 7 ) {
        target_network =
          _value;
      }
      if ( _index == 8 ) {
        contract_address =
          _value;
      }
      if ( _index == 9 ) {
        contract_abi_path =
          _value;
      }
      if ( _index == 10 ) {
        contract_bytecode_path =
          _value;
      }
      if ( _index == 11 ) {
        contract_compiler_output_path =
          _value;
      }
      if ( _index == 12 ) {
        fs_address =
          _value;
      }
      if ( _index == 13 ) {
        publication_namespace =
          _value;
      }
      if ( _index == 14 ) {
        file_hash =
          _value;
      }
      if ( _index == 15 ) {
        index_start =
          _value;
      }
      if ( _index == 16 ) {
        index_end =
          _value;
      }
      if ( _index == 17 ) {
        buffer_length =
          _value;
      }
      if ( _index == 18 ) {
        checkpoint_file_path =
          _value;
      }
      if ( _index == 19 ) {
        chunks_files_type =
          _value;
      }
      if ( 19 < _index ) {
        chunks_files_paths.push(
          _value);
      }
      if ( _value == "-h" ||
           _value == "--help" ) {
        quiet =
          "n";
        _usage(
          0);
      }
  });
  if ( file_hash == "" ||
       fs_address == "" ||
       publication_namespace  == "" ||
       chunks_files_paths == [] ) {
    quiet =
      "n";
    _usage(
      1);
  }
}

async function
  _publish_bulk_cmdline(
    _app_opts) {
  let
    _chunk,
    _chunks_unverified,
    _index;
  try {
    await _publish_bulk.apply(
      null,
      _app_opts);
  } catch (
      _error) {
    console.error(
      _error);
    _msg =
      "Publication error.";
    _msg_error(
      _msg,
      1);
  }
}

function
  _overrides_set() {
  if ( call_timeout == "" ) {
    call_timeout =
      300000;
  }
  if ( chunks_files_type == "" ) {
    chunks_files_type =
      "file";
  }
  if ( buffer_length == "" ) {
    buffer_length =
      3;
  }
  if ( chunks_files_type == "list" ) {
    chunks_files_paths =
      _json_read(
        chunks_files_paths[0]
      );
  }
}

if ( _cmdline_check(
       "publish-bulk") == true ) {
  _global_variables();
  _cmdline_parse();
  _overrides_set();
  _config_show();
  app_opts = [
    retries_max,
    call_timeout,
    wallet_seed_path,
    api_key_path,
    target_network,
    contract_address,
    contract_abi_path,
    contract_bytecode_path,
    contract_compiler_output_path,
    fs_address,
    publication_namespace,
    file_hash,
    index_start,
    index_end,
    buffer_length,
    checkpoint_file_path,
    chunks_files_paths,
  ];
  _publish_bulk_cmdline(
    app_opts);
}

module.exports = {
  _chunks_publish_bulk:
    _chunks_publish_bulk,
  _publish_bulk:
    _publish_bulk
};
