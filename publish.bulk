function
  _msg_info_chunk_publish(
    _index,
    _progress,
    _total) {
  let
    _msg;
  _msg =
    `Publishing chunk '${_index}' ` +
    `('${_progress}'of '${_total}').`;
  _msg_info(
    _msg);
}

function
  _msg_info_chunk_unpublished(
    _index,
    _progress,
    _total) {
  let
    _msg;
  _msg =
    `Chunk '${_index}' unpublished, ` +
    `publishing now ('${_progress}' of ` +
    `'${_total}').`;
  _msg_info(
    _msg);
}

function
  _msg_error_chunk_published_already(
    _index,
    _progress,
    _total) {
  let
    _msg;
  _msg =
    `Chunk '${_index}' published ` +
    `already ('${_progress}' of ` +
    `'${_total}').`;
  _msg_error(
    _msg,
    1);
}


function
  _msg_info_chunk_published(
    _index,
    _progress,
    _total) {
  let
    _msg;
  _msg =
    `Published chunk '${_index}' ` +
    `('${_progress}'of '${_total}').`;
  _msg_info(
    _msg);
}

async function
  _chunks_publish_bulk(
    _contract_run_opts) {
  let
    _tx;
  try {
    _tx = await
      _contract_run.apply(
        null,
        _contract_run_opts);
  } catch(
      _error) {
    _error_display(
      _error);
    _msg =
      "Error publishing the chunk.";
    _msg_error(
      _msg,
      0);
    throw _error;
  }
  return _tx;
}

function
  _input_data_check(
    _index_start,
    _index_end,
    _total_files) {
  let
    _msg,
    _total_indexes;
  _total_indexes =
    _index_end - _index_start + 1;
  if ( _total_files > _total_indexes ) {
    _msg =
      `More files to upload ` +
      `(${_total_files}) than indexes ` +
      `to upload (${_total_indexes}).`;
    _msg_error(
      _msg,
      1);
  }
  if ( _total_files < _total_indexes ) {
    _msg =
      `More indexes' upload ` +
      `(${_total_indexes}) than ` +
      `files to upload (${_total_files}).`;
    _msg_error(
      _msg,
      1);
  }
  _msg =
    "Input data checked.";
  _msg_info(
    _msg);
}

function
  _chunk_file_path_check(
    _path,
    _index,
    _cursor) {
  let
    _msg;
  if ( _path == undefined ) {
    _msg =
      "Chunk file for " +
      `index '${_index}' and ` +
      `cursor '${_cursor}' undefined.`;
    _msg_error(
      _msg,
      1);
  }
}

function
  _chunks_files_paths_prefix_get(
    _chunks_unverified) {
  let
    _chunks_files_paths_prefix,
    _msg;
  if ( _chunks_unverified.length != 0 ) {
    if ( _chunks_unverified[0] == undefined ) {
      _msg =
        "Weird error.";
      _msg_error(
        _msg,
        1);
    }
    else if ( _chunks_unverified[0].length != 0 ) {
      _chunks_files_paths_prefix =
        _ext_rm(
          _chunks_unverified[
            0][
              1]);
    }
  }
  else if ( _chunks_unverified.length == 0 ) {
    _msg =
      "File already published.";
    _msg_info(
      _msg);
  }
  return _chunks_files_paths_prefix;
}

async function
  _publish_bulk(
    _retries_max,
    _call_timeout,
    _wallet_seed_path,
    _api_key_path,
    _target_network,
    _contract_address,
    _contract_abi_path,
    _contract_bytecode_path,
    _contract_compiler_output_path,
    _fs_address,
    _publication_namespace,
    _file_hash,
    _index_start,
    _index_end,
    _buffer_length,
    _checkpoint_file_path,
    _chunks_files_paths
  ) {
  let
    _buffer_cursor,
    _buffer_index,
    _check_call_base_opts,
    _check_call_opts,
    _checkpoint_index,
    _chunk,
    _chunk_check_args,
    _chunk_file_path,
    _chunk_publish_args,
    _chunks_buffer,
    _chunks_buffers,
    _chunks_buffers_length,
    _chunks_total,
    _chunks_files_paths_prefix,
    _chunks_unverified = [],
    _indexes_unverified = [],
    _method_base_args,
    _method_object,
    _msg,
    _progress,
    _publish_call_base_opts,
    _publish_call_opts,
    _published,
    _tx,
    _value,
    _wallet_password;
  if ( _buffer_length == "" ||
       typeof(
         _buffer_length) === 'undefined' ) {
    _buffer_length =
      3;
  }
  if ( _call_timeout == "" ||
       typeof(
         _call_timeout) === 'undefined' ) {
    _call_timeout =
      300000;
  }
  _buffer_length =
    Number(
      _buffer_length);
  _call_timeout =
    Number(
      _call_timeout);
  _index_start =
    Number(
      _index_start);
  _index_end =
    Number(
      _index_end);
  _method_object =
    "";
  _wallet_password =
    "";
  _check_call_base_opts = [
    "", // _wallet_seed_path,
    _retries_max,
    _api_key_path,
    _target_network,
    _contract_abi_path,
    _contract_bytecode_path,
    _contract_compiler_output_path,
    _method_object,
    _contract_address,
    "chunks",
  ];
  _publish_bulk_call_base_opts = [
    _retries_max,
    _call_timeout,
    _wallet_seed_path,
    _wallet_password,
    _api_key_path,
    "fast", // nextblock
    0,
    "wei",
    _target_network,
    _contract_address,
    _contract_abi_path,
    _contract_bytecode_path,
    _contract_compiler_output_path,
    "publishBulk",
  ];
  _method_base_args = [
    _publication_namespace,
    _file_hash
  ];
  _chunks_total =
    _chunks_files_paths.length;
  if ( _chunks_total == 0 ) {
    _msg =
      "File chunks list empty.";
    _msg_error(
      _msg,
      1);
  }
  _input_data_check(
    _index_start,
    _index_end,
    _chunks_total);
  _progress =
    1;
  _cursor =
    0;
  _buffer_cursor =
    1;
  for ( var _index = _index_start;
        _index <= _index_end;
        _index++ ) {
    _msg_info_chunk_publish(
      _index,
      _progress,
      _chunks_total);
    _chunk_file_path =
      _chunks_files_paths[
        _cursor];
    _chunk_file_path_check(
      _chunk_file_path,
      _index,
      _cursor);
    _chunk =
      _file_read(
        _chunk_file_path);
    if ( _buffer_cursor < 3 ) {
      _chunks_buffer.push(
        _chunk);
    else if ( _buffer_cursor == 3 ) {
      _chunks_buffer.push(
        _chunk);
      _buffer_cursor =
        0;
      _chunks_buffers.push(
        _chunk_buffer);
    }
    _chunk_check_args =
      _method_base_args.concat(
        [_index.toString()]);
    _chunk_check_args =
      _method_base_args.concat(
        [_index.toString()]);
    _check_call_opts =
      _check_call_base_opts.concat(
        [_chunk_check_args]);
    try {
      [_published,
       _method_object] =
        await _chunk_check(
          _chunk,
          _check_call_opts);
      // I have no idea if _check_call_base_opts
      // has its components passed by reference
      // or copied so I have no idea if
      // _method_object gets immediately updated
      // or I need to re-init the array so just
      // in case we re-init whole array.
      if ( _check_call_base_opts[7] == "" ) {
        _msg =
          "Reusing contract method object.";
        _msg_info(
          _msg);
        _check_call_base_opts = [
          "", // _wallet_seed_path,
          _retries_max,
          _api_key_path,
          _target_network,
          _contract_abi_path,
          _contract_bytecode_path,
          _contract_compiler_output_path,
          _method_object,
          _contract_address,
          "chunks",
        ];
      }
    } catch (
        _error) {
      _error_display(
        _error);
      _msg =
        "Error checking publication status.";
      _msg_error(
        _msg,
        0);
      throw _error;
    }
    if ( _published == true ) {
      _msg_error_chunk_published_already(
        _index,
        _progress,
        _chunks_total);
    }
    else if ( _published == false ) {
      _msg_info_chunk_published(
        _index,
        _progress,
        _chunks_total);
    }
    else {
      _msg_error(
        _published,
        0);
      _console.error(
        _published);
      throw {
        "error": {
          "message":
            "Unexpected chunk publication status value." } };
    }
    _progress =
      _progress + 1;
    _cursor =
      _cursor + 1;
    _buffer_cursor =
      _buffer_cursor + 1;
  }
  _chunks_buffers_length =
    _chunks_buffers.length;
  for ( var _buffer_index = 0;
        _buffer_index <= _chunks_buffers_length;
        _buffer_index++ ) {
    _index =
      _index_start + _buffer_length * _buffer_index;
    _publish_bulk_args =
      _method_base_args.concat(
        [_index.toString(),
         _chunks_buffers[
           _buffer_index]
        ]);
    _publish_bulk_call_opts =
      _publish_bulk_call_base_opts.concat(
        [_publish_bulk_args]);
    try {
      _tx = await
        _chunks_publish_bulk(
          _chunks_publish_bulk_call_opts);
    } catch (
        _error) {
      _error_display(
        _error);
      _msg =
        "Error running publishing chunks function.";
      _msg_error(
        _msg,
        0);
      throw _error;
    }
  }
  _cursor =
    0;
  for ( var _index = _index_start;
        _index <= _index_end;
        _index++ ) {
    _chunk_file_path =
      _chunks_files_paths[
        _cursor];
    _chunks_unverified.push(
      [_index,
       _chunk_file_path]);
    _cursor =
      _cursor + 1;
  }
  _checkpoint_index =
    _index_end.toString();
  _file_write(
    _checkpoint_file_path,
    _checkpoint_index);
  if ( _chunks_unverified.length != 0 ) {
    _chunks_files_paths_prefix =
      _chunks_files_paths_prefix_get(
        _chunks_unverified);
    for ( _chunk of _chunks_unverified ) {
      _indexes_unverified.push(
        _chunk[
          0]);
    }
  }
  if ( _indexes_unverified.length != 0 ) {
    _msg =
      "Some index are left to verify.";
    _msg_info(
      _msg);
    // _verify(
    //   _retries_max,
    //   _api_key_path,
    //   _target_network,
    //   _contract_address,
    //   _contract_abi_path,
    //   _contract_bytecode_path,
    //   _contract_compiler_output_path,
    //   _publication_namespace,
    //   _file_hash,
    //   _chunks_files_paths_prefix,
    //   _indexes_unverified); 
  }
  else if ( _indexes_unverified.length == 0 ) {
    _msg =
      "All chunks already verified.";
    _msg_info(
      _msg);
    _checkpoint_index =
      _index_end.toString();
    _file_write(
      _checkpoint_file_path,
      _checkpoint_index);
  }
  return _chunks_unverified;
}

